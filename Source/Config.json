{
  "name": "ChatGPT Custom",
  "icon": "openai-icon.svg",
  "identifier": "com.popext.chatgptany",
  "description": "Send the selected text to ChatGPT and append the response.",
  "note": "You will need an <a href=\"https://platform.openai.com/account/api-keys\">OpenAI API key</a>",
  "app": {
    "name": "ChatGPT Custom",
    "link": "https://openai.com/blog/chatgpt"
  },
  "popclipVersion": 4069,
  "module": "chatgpt.ts",
  "entitlements": [
    "network"
  ],
  "options": [
    {
      "identifier": "apikey",
      "label": "API Key",
      "type": "string",
      "description": "Obtain an API key from: https://platform.openai.com/account/api-keys"
    },
    {
      "identifier:": "model",
      "label": "Model",
      "type": "string",
      "description": "The LLM model you want to use",
      "defaultValue": "gpt-4o-mini"
    },
    {
      "identifier:": "prompt",
      "label": "Prompt",
      "type": "string",
      "description": "Base prompt.",
      "defaultValue": ""
    },
    {
        "identifier": "base_url",
        "label": "BASE_URL",
        "type": "string",
        "description": "base_url for the service provider",
        "defaultValue": "https://api.openai.com/v1"
    }
  ]
}
